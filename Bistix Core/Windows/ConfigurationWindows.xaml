<Window x:Class="Bistix.Windows.ConfigurationWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bistix.Windows"
        mc:Ignorable="d"
        Title="Exchanges" Height="402" Width="309" Background="White">
    <Grid>
        <DockPanel>
            <GroupBox  Header="Select order data sources">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <CheckBox IsChecked="True" x:Name="CbCoinbase"  Content="Coinbase"  FontSize="18"/>
                    <CheckBox x:Name="CbBinance"   Content="Binance"   FontSize="18"/>
                    <CheckBox x:Name="CbBittrex"   Content="Bittrex"   FontSize="18"/>
                    <CheckBox x:Name="CbLuno"      Content="Luno"      FontSize="18"/>
                    <CheckBox x:Name="CbCoinmama"  Content="Coinmama"  FontSize="18"/>
                    <CheckBox x:Name="CbChangelliy" Content="Changelly" FontSize="18"/>

                </StackPanel>

            </GroupBox>
            

        </DockPanel>
    </Grid>
</Window>
