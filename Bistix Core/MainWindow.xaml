<Window x:Class="Bistix_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bistix_Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="70" Margin="10,10,0,0" Background="#FFFFD3D3">
            <Label Content="Symbol" Background="#FFC7C7C7" />
            <Label Content="BTC" FontSize="18" />
            <Label Content="LTC&#x9;" FontSize="18" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="115" Margin="80,10,0,0" Background="#FFFBF1FF">
            <Label Content="EUR&#x9;" Background="#FFDEDEDE" />
            <TextBlock TextWrapping="Wrap" x:Name="BTC_VAL" Text="0" Margin="2,4,0,0" FontSize="18" />
            <TextBlock TextWrapping="Wrap" x:Name="LTC_VAL" Text="0" Margin="2,11,0,0" FontSize="18" />
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="615,295,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" />
        <TextBlock x:Name="TimeBOX" HorizontalAlignment="Left" Margin="200,379,0,0" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top" Height="30" Width="180" FontSize="20"/>
    </Grid>
</Window>