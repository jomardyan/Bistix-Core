<Window x:Class="Bistix_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bistix_Core"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="70" Margin="10,10,0,0" Background="#FFFFD3D3">
            <Label Content="Symbol" Background="#FFC7C7C7" />
            <Label Content="BTC" FontSize="18" />
            <Label Content="LTC&#x9;" FontSize="18" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="115" Margin="80,10,0,0" Background="#FFFBF1FF">
            <Label Content="EUR&#x9;" Background="#FFDEDEDE" />
            <TextBlock TextWrapping="Wrap" x:Name="BTC_VAL" Text="0" Margin="2,4,0,0" FontSize="18" HorizontalAlignment="Left" />
            <TextBlock TextWrapping="Wrap" x:Name="LTC_VAL" Text="0" Margin="2,11,0,0" FontSize="18" HorizontalAlignment="Left" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="65" Margin="200,40,0,0" VerticalAlignment="Top" Width="100">
            <iconPacks:PackIconModern Kind="ArrowDownUp" x:Name="BTCARROW" Margin="0,0,0,20" Foreground="#FFBBBBBB" />
            <iconPacks:PackIconModern Kind="ArrowDownUp" x:Name="LTCARROW" Foreground="#FFBBBBBB"  />


        </StackPanel>


        <TextBlock x:Name="TimeBOX" HorizontalAlignment="Left" Margin="602,384,0,0" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top" Height="25" Width="180" FontSize="20"/>
        <Label Content="Local Time" HorizontalAlignment="Left" Margin="520,384,0,0" VerticalAlignment="Top" />
        <Button Content="refresh" HorizontalAlignment="Left" Margin="390,390,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>